<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGray"
    tools:context=".ui.options.view.recordFeedBack.view.Act_options_recordFeedBack">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/general_tool_bar"
            />
        <ImageView
            android:id="@+id/record_feed_back_back"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_feed_back_white_24dp"
            />
    </RelativeLayout>
    <TextView
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入你的意见:"
        android:textSize="@dimen/sp_18"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorDartGray"
        />
    <EditText
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="top|left"
        android:background="@color/colorWhite"
        android:id="@+id/record_feed_back_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:hint="@string/feedback"
        />
    <Button
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/record_feed_back_submit"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textSize="@dimen/sp_18"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"
        />
</LinearLayout>